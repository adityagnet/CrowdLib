<p id="notice"><%= notice %></p>

<div id="login">
    <form class="login">
        <input class="login_message" placeholder="Username" type="text" id="locationlogin">   
        <input class="password_message" placeholder="Password" type="text" id="password">   
        <input type="submit" class="login_submit" value="login"> 
    </form> 


</div>


<div id="title">
    <h1> CrowdLib </h1> 
</div>
<div id="taskbar">
    <div class="col-12">
        <form class="search">
            <input class="search_message" placeholder="Where do you want to study?" type="text" id="locationsearch">    
            <input type="submit" class="search_submit" value="search"> 
        </form> 
    </div>
</div>

<div id="main">
    <% count = 0 %>
    <% @places.order(clicks: :desc).each do |place| 
      count += 1%>
        <div class="col-4">
            <div class="find">
                <h2> 
                    <%= link_to place.name, place %>
                </h2>
            </div>
                <div class="col-4">
                    <h4> Crowd </h4>
                    <h4> Noise </h4> 
                    <h4> Clean </h4> 
                </div>
                <div class="col-6">
                  <meter value="<%= place.crowd_current/place.crowd_max %>"></meter>
                  <meter value="<%= place.noise_max/place.noise_num %>"></meter>
                  <meter value="<%= place.comfort_max/place.comfort_num %>"></meter> 
                </div>
                <div class="col-2"></div> 
        </div>
        <% break if count == 6 %>
    <% end %>
</div>

<%= link_to 'New Place', new_place_path %>
